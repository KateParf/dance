<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dances">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <fragment
            android:id="@+id/hatFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.myapplication1.HatFragment"
            app:layout_constraintTop_toTopOf="parent"/>

        <RelativeLayout
            android:id="@+id/pnlFilter"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_filter"
            tools:ignore="MissingConstraints">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="160dp"
                android:text="Со сменой партнера"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/GroupRadio"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="190dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/YesRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Да"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/NoRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Нет"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/AllRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Все"
                    android:textSize="14sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="230dp"
                android:text="Количество пар"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/outputSeekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="295dp"
                android:layout_marginTop="260dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <SeekBar
                android:id="@+id/volumeSeekBar"
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:max="6"
                android:progress="1"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="300dp"
                android:backgroundTint="#5B3C2C"
                android:onClick="onFilterSubmit"
                android:text="Найти"
                android:textSize="15sp" />



            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="300dp"
                android:backgroundTint="#5B3C2C"
                android:text="Сбросить"
                android:onClick="BtnReset"
                android:textSize="15sp" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Направления"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                </TableRow>
                <TableRow><Spinner
                    android:id="@+id/spinner_types"
                    android:layout_width="100dp"
                    android:background="@drawable/white_rectangle"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" /></TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Эпохи"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                </TableRow>
                <TableRow> <Spinner
                    android:id="@+id/spinner_period"
                    android:layout_width="200dp"
                    android:background="@drawable/white_rectangle"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" /></TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Сложность"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </TableRow>
                <TableRow>
                    <Spinner
                    android:id="@+id/spinner_levels"
                    android:background="@drawable/white_rectangle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" /></TableRow>
            </TableLayout>


        </RelativeLayout>

        <ScrollView
            android:id="@+id/pnlScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal|vertical">

            <LinearLayout
                android:id="@+id/pnlDance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:padding="10dp">

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>