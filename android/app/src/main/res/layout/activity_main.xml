<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dances">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bgandroid">
        <fragment
            android:id="@+id/hatFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.myapplication1.HatFragment" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="430dp"
            android:background="#80FFE2E2"
            android:layout_marginTop="240dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_marginTop="120dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Клуб танцев"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:fontFamily="@font/philosopher"
               />
            <TextView
                android:layout_marginTop="1dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Студии салонных танцев им. С. Болдырева"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/philosopher"
               />

            <TextView
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:gravity="left"
                android:text="Добро пожаловать, рады Вас видеть. Мы приглашаем всех желающих студентов Самарского университета на наши
занятия, которые проходят каждый понедельник и четверг в Зеркальном зале.
По адресу: 3 корпус, Студия салонных танцев Самарского университета, г. Самара"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/philosopher"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="На этом сайте Вы можете ознакомиться со схемами танцев и движений, которые понадобятся вам при подготовке к
городским балам, маскарадным вечерам и другим праздникам бального сообщества."
                android:textColor="@color/white"
                android:fontFamily="@font/philosopher"
                android:textSize="20sp"
                android:gravity="left"/>
        </LinearLayout>
    </FrameLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>