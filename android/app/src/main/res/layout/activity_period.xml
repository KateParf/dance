<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/period"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".period">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/bgandroid">
    <fragment
        android:id="@+id/hatFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.myapplication1.HatFragment"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <ScrollView
          app:layout_constraintTop_toBottomOf="@+id/scroll"
          android:id="@+id/scroll"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fillViewport="true"
          tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/levelsScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:fontFamily="@font/philosopher"
              android:text="Танцы по периодам"
              android:textSize="35sp"
              android:textColor="@color/white"/>
          <LinearLayout
              android:paddingStart="10dp"
              android:background="@color/main_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

          <androidx.cardview.widget.CardView
              android:id="@+id/card_middleAges"
              android:onClick="goOnMovement"
              android:layout_width="180dp"
              android:layout_height="180dp"
              android:layout_marginStart="10dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"

              >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginBottom="50dp"
                android:src="@drawable/mideval"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:text="@string/mideval"
                android:fontFamily="@font/philosopher"
                android:textSize="30sp" />
          </androidx.cardview.widget.CardView>

          <androidx.cardview.widget.CardView
              android:id="@+id/card_eightAges"
              android:onClick="goOnMovement"
              android:layout_width="180dp"
              android:layout_height="180dp"
              android:layout_marginStart="10dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/eighteen"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:text="@string/eighteen"
                android:fontFamily="@font/philosopher"
                android:textSize="30sp" />
          </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">
          <androidx.cardview.widget.CardView
              android:id="@+id/card_nineAges"
              android:onClick="goOnMovement"
              android:layout_width="180dp"
              android:layout_height="180dp"
              android:layout_marginStart="10dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginBottom="50dp"
                android:src="@drawable/nineteen"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:text="@string/nineteen"
                android:fontFamily="@font/philosopher"
                android:textSize="30sp" />

          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:id="@+id/card_twentyAges"
              android:onClick="goOnMovement"
              android:layout_width="180dp"
              android:layout_height="180dp"
              android:layout_marginStart="10dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginBottom="50dp"
                android:src="@drawable/twenty"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:text="@string/twenty"
                android:fontFamily="@font/philosopher"
                android:textSize="30sp" />
          </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">
          <androidx.cardview.widget.CardView
              android:id="@+id/card_twentyOneAges"
              android:onClick="goOnMovement"
              android:layout_width="180dp"
              android:layout_height="180dp"
              android:layout_marginStart="10dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginBottom="50dp"
                android:src="@drawable/twentyone"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:text="@string/twentyone"
                android:fontFamily="@font/philosopher"
                android:textSize="30sp" />

          </androidx.cardview.widget.CardView>

        </LinearLayout>
          <View
              android:layout_width="wrap_content"
              android:layout_height="100dp"
              android:backgroundTint="@color/main_background"/>
      </LinearLayout>
        </LinearLayout>
    </ScrollView>

    </LinearLayout>
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>